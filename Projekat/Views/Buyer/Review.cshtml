
@{
    ViewBag.Title = "Review";
}

<head>
    <link rel="stylesheet" href="~/Content/Home.css" type="text/css" />
</head>
<body>
    Leave your comment and rate the show!
    <form action="/Buyer/Review" method="post">
        Show: @ViewBag.show<br />
        <br />
        <input type="text" placeholder="Comment" name="comment" />
        <br />
        <select name="rating">
            <option value="1">*</option>
            <option value="2">**</option>
            <option value="4">***</option>
            <option value="4">****</option>
            <option value="5">*****</option>
        </select>
        <br />
        <input type="hidden" value="@ViewBag.show" name="IDShow" />
        <input type="submit" value="Submit review!" />
    </form>
    <br />
    <br />
    <div class="link">
        @Html.ActionLink(">>Home", "Index", "Buyer");
    </div>
</body>

