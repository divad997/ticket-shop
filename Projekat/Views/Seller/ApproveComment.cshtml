
@{
    ViewBag.Title = "ApproveComment";
}

<head>
    <link rel="stylesheet" href="~/Content/Home.css" type="text/css" />
</head>
<body>
    <h2>Comments on hold</h2>
    <table cellpadding="0" cellspacing="0">
            <tr>Show name</th>
            <th>Buyer</th>
            <th>Comment</th>
            <th>Rating</th>
            <th></th>
        </tr>
        @foreach (var c in ViewBag.comments)
        {
            <tr>
                <td>
                    @c.Show <br />
                </td>

                <td>@c.Buyer</td>
                <td>@c.Post</td>
                <td>
                    @c.Rating

                </td>
                <td>
                    <form action="~/Seller/Approve" method="post">
                        <input type="hidden" name="IDComment" value="@c.Post" /><br />
                        <input type="hidden" name="IDBuyer" value="@c.Buyer" /><br />
                        <input type="hidden" name="IDShow" value="@c.Show" /><br />
                        <input type="submit" value="Approve" />
                    </form>
                    <form action="~/Seller/Reject" method="post">
                        <input type="hidden" name="IDComment" value="@c.Post" /><br />
                        <input type="hidden" name="IDBuyer" value="@c.Buyer" /><br />
                        <input type="hidden" name="IDShow" value="@c.Show" /><br />
                        <input type="submit" value="Reject" />
                    </form>
                </td>


            </tr>

        }
    </table>
    <div class="link">
        @Html.ActionLink("<<Home", "Index", "Seller");
    </div>

</body>

