
@{
    ViewBag.Title = "Shows";
}


<head>
    <link rel="stylesheet" href="~/Content/Home.css" type="text/css" />
</head>
<body>
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Date</th>
            <th>Duration</th>
            <th>Location</th>
            <th>Price</th>
            <th>Rating</th>
            <th>Poster</th>
        </tr>
        @foreach (var s in ViewBag.shows)
        {
            <tr>
                <td>
                    @s.Name <br />
                    <form action="~/Seller/EditShowData" method="post">
                        <input type="hidden" name="ID" value="@s.Name" /><br />
                        <input type="submit" value="Edit Show" />
                    </form>
                </td>

                <td>@s.Type</td>
                <td>@s.Start</td>
                <td>@s.Duration</td>
                <td>@s.Address.City, @s.Address.Street, @s.Address.ZipCode</td>
                <td>@s.Price</td>
                <td>@s.Rating</td>
                <td><img alt="show picture" src=@s.Slika /></td>
            </tr>

        }
    </table>
    <div class="link">
        @Html.ActionLink("<<Home", "Index", "Seller");
    </div>
</body>
